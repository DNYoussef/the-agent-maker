# Flake8 Configuration
[flake8]
max-line-length = 100
extend-ignore = E203, E501, W503
max-complexity = 10
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .venv,
    venv,
    storage,
    wandb,
    htmlcov

# Per-file ignores
per-file-ignores =
    __init__.py:F401

# Plugins
docstring-convention = google
